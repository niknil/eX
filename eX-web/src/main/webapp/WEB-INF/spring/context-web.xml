<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
            http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd">

    <import resource="classpath*:META-INF/context-root.xml"/>

    <context:component-scan base-package="com.eX.controller"/>
    <mvc:annotation-driven/>
    <mvc:resources mapping="/css/**" location="/css/"/>
    <mvc:resources mapping="/images/**" location="/images/"/>
    <mvc:resources mapping="/eX/**" location="/eX/"/>
    <mvc:resources mapping="/fonts/**" location="/fonts/"/>
    <bean id="mapper" class="com.eX.mappers.Mapper">
    </bean>


    <bean id="homeController" class="com.eX.controller.HomeController" init-method="init">
        <constructor-arg name="exServiceClient" ref="exServiceClient"/>
    </bean>

    <bean id="heroController" class="com.eX.controller.HeroController">
        <constructor-arg name="exServiceClient" ref="exServiceClient"/>
        <constructor-arg name="mapper" ref="mapper"/>
    </bean>

    <bean id="teamController" class="com.eX.controller.TeamController">
        <constructor-arg name="exServiceClient" ref="exServiceClient"/>
        <constructor-arg name="mapper" ref="mapper"/>
    </bean>
</beans>